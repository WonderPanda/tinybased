{
  "name": "tinybased",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tinybased/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/tinybased"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs tinybased {args.ver} {args.tag}"
      },
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": [
        "coverage/packages/tinybased"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/tinybased"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/tinybased/**/*.ts"
        ]
      }
    }
  },
  "tags": []
}
